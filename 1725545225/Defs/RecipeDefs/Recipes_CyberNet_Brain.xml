    <defName>CNInstallBrainDamageRepairSystem</defName>
    <label>Install Brain Damage Repair System</label>
    <description>Install a Brain Damage Repair System</description>
    <jobString>Installing a Brain Damage Repair System</jobString>
    <workAmount>6000</workAmount>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CNBrainDamageRepairSystem</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <thingDefs>
        <li>CNBrainDamageRepairSystem</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>CNBrainDamageRepairSystem</addsHediff>
  </RecipeDef>

